        stage("run test notification test file"){
            steps{
                sh"""
                pytest -vs Tests/test_notification.py --platformname Android --udid 988a90363239513753 --platformversion 8.0.0
                """
            }
        }

        stage("Deactivate virtual env"){
            steps{
                sh"""
                deactivate
                """
            }
        }
        
   }
}